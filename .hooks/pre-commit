#!/bin/sh
# Run Spotless only on staged Kotlin files

CHANGED_FILES="$(git diff --cached --name-only --diff-filter=ACMRTUXB | grep '\.kt[s]\?$')"

if [ -z "$CHANGED_FILES" ]; then
  echo "âœ… No Kotlin files staged."
  exit 0
fi

echo "ðŸŽ¯ Running Spotless Apply on staged files..."

./gradlew spotlessApply

echo "ðŸ“¦ Re-adding formatted files to Git..."

echo "$CHANGED_FILES" | while read -r file; do
  if [ -f "$file" ]; then
    git add "$file"
  fi
done

echo "âœ… Spotless formatting completed and staged."

exit 0
